@model TPLOCAL1.Models.FormulaireModel

@{
    ViewData["Title"] = "Formulaire";
    ViewData["TitleH1"] = "Formulaire HN TP avis";
}

<section>
    @if (ViewData["Message"] != null)
    {
        <div class="alert-form">
            @ViewData["Message"] <br />
            @Html.ValidationMessageFor(Model => Model.LastName) <br />
            @Html.ValidationMessageFor(Model => Model.FirstName) <br />
            @Html.ValidationMessageFor(Model => Model.UserGender) <br />
            @Html.ValidationMessageFor(Model => Model.UserAdress) <br />
            @Html.ValidationMessageFor(Model => Model.UserZipCode) <br />
            @Html.ValidationMessageFor(Model => Model.UserTown) <br />
            @Html.ValidationMessageFor(Model => Model.UserEmail) <br />
            @Html.ValidationMessageFor(Model => Model.StartDate) <br />
            @Html.ValidationMessageFor(Model => Model.CourseName)
        </div>
    }

    <form action="/Home/ValidationFormulaire" method="post">
        <div class="tableform">
            <p id="titleinformations">Informations personnelles</p>
            <table>
                <tr>
                    <th><label for="LastName">Nom</label></th>
                    <td><input type="text" id="LastName" name="LastName" placeholder="Durand" value="@Model?.LastName" /></td>
                </tr>
                <tr>
                    <th><label for="FirstName">Prénom</label></th>
                    <td><input type="text" id="FirstName" name="FirstName" placeholder="René" value="@Model?.FirstName" /></td>
                </tr>
                <tr>
                    <th><label for="UserGender">Sexe</label></th>
                    <td>
                        <select id="UserGender" name="UserGender" value="@Model?.UserGender">
                            <option value="" disabled selected>Selectionné un sexe</option>
                            <option value="Homme">Homme</option>
                            <option value="Femme">Femme</option>
                            <option value="Non-Binaire">Non-binaire</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th><label for="UserAdress">Adresse</label></th>
                    <td><input type="text" id="UserAdress" name="UserAdress" placeholder="1 rue Maurice Thorez" value="@Model?.UserAdress" /></td>
                </tr>
                <tr>
                    <th><label for="UserZipCode">Code Postale</label></th>
                    <td><input type="text" id="UserZipCode" name="UserZipCode" placeholder="75000" maxlength="5" value="@Model?.UserZipCode" /></td>
                </tr>
                <tr>
                    <th><label for="UserTown">Ville</label></th>
                    <td><input type="text" id="UserTown" name="UserTown" placeholder="Paris" value="@Model?.UserTown" /></td>
                </tr>
                <tr>
                    <th><label for="UserEmail">Adresse email</label></th>
                    <td><input type="email" id="UserEmail" name="UserEmail" placeholder="exemple@gmail.com" value="@Model?.UserEmail" /></td>
                </tr>
            
            </table>
        </div>

        <div class="tableform">
            <p id="titletraining">Informations formation suivie</p>
            <table>
                <tr>
                   <th><label for="StartDate">Date de début formation</label></th>
                    <td><input type="date" id="StartDate" name="StartDate" max="2021-01-01" /></td>
                </tr>
                <tr>
                    <th><label for="CourseName">Formation suivie</label></th>
                    <td>
                        <select id="CourseName" name="CourseName">
                            <option value="" disabled selected>Sélectionner une formation</option>
                            <option value="Formation Cobol">Formation Cobol</option>
                            <option value="Formation C#">Formation C#</option>
                            <option value="Formation double compétences">Formation double compétences</option>
                        </select>
                    </td>
                </tr>
            </table>
        </div>

        <div class="tableform">
            <p id="titleopinion">Avis sur la formation</p>
            <table>
                <tr>
                    <th><label for="OpinionCobol">Formation Cobol</label></th>
                    <td><input type="text" id="OpinionCobol" name="OpinionCobol" /></td>
                </tr>
                <tr>
                    <th><label for="OpinionDotnet">Formation C#</label></th>
                    <td><input type="text" id="OpinionDotnet" name="OpinionDotnet" /></td>
                </tr>
            </table>
        </div>
        <input type="submit" value="Valider" />
    </form>
</section>