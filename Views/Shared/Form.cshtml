@{
    ViewData["Title"] = "HN - TP LOCAL";
    string emailPattern = "^([\\w]+)@([\\w]+)\\.([\\w]+)$";
}

<section>
    <form action="/ValidationFormulaire.cshtml">
        <div class="tableform">
            <p id="titleinformations">Informations personnelles</p>
            <table>
                <tr>
                    <th><label for="lname">Nom</label></th>
                    <td><input type="text" id="lname" name="lname" placeholder="Durand" required /></td>
                </tr>
                <tr>
                    <th><label for="fname">Prénom</label></th>
                    <td><input type="text" id="fname" name="fname" placeholder="René" required /></td>
                </tr>
                <tr>
                    <th><label for="usergender">Sexe</label></th>
                    <td>
                        <select id="usergender" name="usergender" required>
                            <option value="" disabled selected>Selectionné un sexe</option>
                            <option value="userman">Homme</option>
                            <option value="userwoman">Femme</option>
                            <option value="userother">Non-binaire</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th><label for="useradress">Adresse</label></th>
                    <td><input type="text" id="useradress" name="useradress" placeholder="1 rue Maurice Thorez" required /></td>
                </tr>
                <tr>
                    <th><label for="userzipcode">Code Postale</label></th>
                    <td><input type="text" id="userzipcode" name="userzipcode" placeholder="75000" maxlength="5" pattern="[0-9]{5}" required /></td>
                </tr>
                <tr>
                    <th><label for="usertown">Ville</label></th>
                    <td><input type="text" id="usertown" name="usertown" placeholder="Paris" required /></td>
                </tr>
                <tr>
                    <th><label for="useremail">Adresse email</label></th>
                    <td><input type="email" id="useremail" name="useremail" placeholder="exemple@gmail.com" pattern="@emailPattern" required /></td>
                </tr>
            
            </table>
        </div>

        <div class="tableform">
            <p id="titletraining">Informations formation suivie</p>
            <table>
                <tr>
                   <th><label for="startdate">Date de début formation</label></th>
                   <td><input type="date" id="startdate" name="startdate" max="2021-01-01" required /></td>
                </tr>
                <tr>
                    <th><label for="coursename">Formation suivie</label></th>
                    <td>
                        <select id="coursename" name="coursename" required>
                            <option value="" disabled selected>Sélectionner une formation</option>
                            <option value="cobol">Formation Cobol</option>
                            <option value="dotnet">Formation C#</option>
                            <option value="doubleskills">Formation double compétences</option>
                        </select>
                    </td>
                </tr>
            </table>
        </div>

        <div class="tableform">
            <p id="titleopinion">Avis sur la formation</p>
            <table>
                <tr>
                    <th><label for="opinioncobol">Formation Cobol</label></th>
                    <td><input type="text" id="opinioncobol" name="opinioncobol" /></td>
                </tr>
                <tr>
                    <th><label for="opiniondotnet">Formation C#</label></th>
                    <td><input type="text" id="opiniondotnet" name="opiniondotnet" /></td>
                </tr>
            </table>
        </div>
        <input type="submit" value="Valider" />
    </form>
</section>