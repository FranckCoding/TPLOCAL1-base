@model TPLOCAL1.Models.FormulaireModel

@{
    ViewData["Title"] = "Formulaire";
    ViewData["TitleH1"] = "Formulaire HN TP avis";
}

<section>
    @if (ViewData["Message"] != null)
    {
        <div class="alert-form">
            @ViewData["Message"] <br />
        </div>
    }

    <form action="/Home/ValidationFormulaire" method="post">
        <div class="tableform">
            <p id="titleinformations">Informations personnelles</p>
            <table>
                <tr>
                    <th><label for="LastName">Nom</label></th>
                    <td>
                        <input type="text" id="LastName" name="LastName" placeholder="Durand" value="@Model?.LastName" />
                        <em>@Html.ValidationMessageFor(Model => Model.LastName)</em>
                    </td>
                </tr>
                <tr>
                    <th><label for="FirstName">Prénom</label></th>
                    <td>
                        <input type="text" id="FirstName" name="FirstName" placeholder="René" value="@Model?.FirstName" />
                        <em>@Html.ValidationMessageFor(Model => Model.FirstName)</em>
                    </td>
                </tr>
                <tr>
                    <th><label for="UserGender">Sexe</label></th>
                    <td>
                        <select id="UserGender" name="UserGender" value="@Model?.UserGender">
                            <option value="" disabled selected>Selectionné un sexe</option>
                            <option value="Homme">Homme</option>
                            <option value="Femme">Femme</option>
                            <option value="Non-Binaire">Non-binaire</option>
                        </select>
                        <em>@Html.ValidationMessageFor(Model => Model.UserGender)</em>
                    </td>
                </tr>
                <tr>
                    <th><label for="UserAdress">Adresse</label></th>
                    <td>
                        <input type="text" id="UserAdress" name="UserAdress" placeholder="1 rue Maurice Thorez" value="@Model?.UserAdress" />
                        <em>@Html.ValidationMessageFor(Model => Model.UserAdress)</em>
                    </td>
                </tr>
                <tr>
                    <th><label for="UserZipCode">Code Postale</label></th>
                    <td>
                        <input type="text" id="UserZipCode" name="UserZipCode" placeholder="75000" maxlength="5" value="@Model?.UserZipCode" />
                        <em>@Html.ValidationMessageFor(Model => Model.UserZipCode)</em>
                    </td>
                </tr>
                <tr>
                    <th><label for="UserTown">Ville</label></th>
                    <td>
                        <input type="text" id="UserTown" name="UserTown" placeholder="Paris" value="@Model?.UserTown" />
                        <em>@Html.ValidationMessageFor(Model => Model.UserTown)</em>
                    </td>
                </tr>
                <tr>
                    <th><label for="UserEmail">Adresse email</label></th>
                    <td>
                        <input type="email" id="UserEmail" name="UserEmail" placeholder="exemple@gmail.com" value="@Model?.UserEmail" />
                        <em>@Html.ValidationMessageFor(Model => Model.UserEmail)</em>
                    </td>
                </tr>
            
            </table>
        </div>

        <div class="tableform">
            <p id="titletraining">Informations formation suivie</p>
            <table>
                <tr>
                   <th><label for="StartDate">Date de début formation</label></th>
                    <td>
                        <input type="date" id="StartDate" name="StartDate" max="2021-01-01" />
                        <em>@Html.ValidationMessageFor(Model => Model.StartDate)</em>
                    </td>
                </tr>
                <tr>
                    <th><label for="CourseName">Formation suivie</label></th>
                    <td>
                        <select id="CourseName" name="CourseName">
                            <option value="" disabled selected>Sélectionner une formation</option>
                            <option value="Formation Cobol">Formation Cobol</option>
                            <option value="Formation C#">Formation C#</option>
                            <option value="Formation double compétences">Formation double compétences</option>
                        </select>
                        <em>@Html.ValidationMessageFor(Model => Model.CourseName)</em>
                    </td>
                </tr>
            </table>
        </div>

        <div class="tableform">
            <p id="titleopinion">Avis sur la formation</p>
            <table>
                <tr>
                    <th><label for="OpinionCobol">Formation Cobol</label></th>
                    <td><input type="text" id="OpinionCobol" name="OpinionCobol" /></td>
                </tr>
                <tr>
                    <th><label for="OpinionDotnet">Formation C#</label></th>
                    <td><input type="text" id="OpinionDotnet" name="OpinionDotnet" /></td>
                </tr>
            </table>
        </div>
        <input type="submit" value="Valider" />
    </form>
</section>